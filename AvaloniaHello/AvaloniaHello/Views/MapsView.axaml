<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AvaloniaHello.ViewModels"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Avalonia;assembly=Mapsui.UI.Avalonia"
             mc:Ignorable="d"
             x:Class="AvaloniaHello.Views.MapsView"
             x:DataType="vm:MapsViewModel">
  <Grid RowDefinitions="Auto,*" Background="#0b1522">
    <StackPanel Orientation="Horizontal" Spacing="12" Margin="24" HorizontalAlignment="Left">
      <Button Content="Back" Command="{Binding GoHomeCommand}" Padding="18,10" CornerRadius="10" Background="#1f3a8a" Foreground="White"/>
      <TextBlock Text="Explore the map" VerticalAlignment="Center" Foreground="White" FontSize="22"/>
    </StackPanel>
    <mapsui:MapControl x:Name="MapHost" Grid.Row="1" Margin="24"/>
  </Grid>
</UserControl>
